# Environment Variables for Mench-ai Frontend

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Application Configuration
NEXT_PUBLIC_APP_NAME="Mench-ai"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_CODE_PREVIEW=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_SESSION_STORAGE=true

# UI Configuration
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=4000
NEXT_PUBLIC_TYPING_DELAY=50
NEXT_PUBLIC_AUTO_SCROLL=true

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Development
NEXT_PUBLIC_DEBUG_MODE=false